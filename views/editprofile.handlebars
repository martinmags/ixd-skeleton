<!doctype html>
<html>

<head>
  <title>SwingGo - Profile</title>
  {{> meta}}
  {{> styles}}
  <link rel="stylesheet" href="css/editprofilestyles.css">
</head>

<body>
  <div class="screen_container">
    <!-- Profile Button and Logo ------------------->
    <!-- Include a first-time user message overlay-->
    <div class="top_container"> 
      <a class="thumbnailtop" href="profileAlt">
        <img id="backarrow" src="images/backarrow.png">
      </a>
      <header class="title">
        <text>Edit Profile</text>
      </header>
      <div class="thumbnailtop"></div>

    </div>

    <!-- Camera Component -------------------------->
    <!-- Include a first-time user message overlay-->
    <div class="content_container">
      <div class="welcome">
        <div class="user">
          <!-- Photo -->
          <div class="image">
            <img id="photo" class='img-responsive' src="images/profileIcon.png"><br>
          </div>
          <br>
          <text class="upload">Upload a Picture</text><br>
          <form class="col-12" role="form" method="get" action="/edituser">
            <div class="form-group" id="uname">
              <input type="text" class="form-control" placeholder="Enter your Name" name="name">
            </div>          
            <div class="form-group" id="email">
              <input type="email" class="form-control" placeholder="Enter your Email" name="email">
            </div>
            <div class="form-group" id="pw">
              <input type="password" class="form-control" placeholder="Enter a Password" name="password">
            </div>
            <br>
            <div class="form-group" id="dh">
              Dominant Hand<input type="text" class="form-control" placeholder="Left or Right" name="dominanthand">
            </div>

            <!-- TODO: Dominant Hand button to toggle between right or left --> 
            <input type="submit" class="btn" value="Submit"></input>
          </form>
          
        </div>        
      </div>
      <div class="info">
      </div>
    </div>
  </div>
</body>
</html>
