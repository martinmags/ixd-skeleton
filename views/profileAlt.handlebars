<!doctype html>

<html>

<head>
  <title>SwingGo - Learn from a Virtual Coach</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">  
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="js/bootstrap/bootstrap.min.js"></script>
  <link rel="stylesheet" href="css/bootstrap-theme.min.css">
  <link rel="stylesheet" href="css/bootstrap.min.css">  
  <link rel="stylesheet" href="css/profileAltstyles.css">
  <!-- Font type -->
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Fanwood+Text" />
  {{> facebook}}
  <script src="/js/facebook.js"></script>

  <!-- Google Analytics -->
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-135604176-1', 'auto');
  ga('send', 'pageview');
  </script>
  <!-- End Google Analytics -->
</head>

<body>
  <div class="screen_container">
    <!-- Profile Button and Logo ------------------->
    <!-- Include a first-time user message overlay-->
    <div class="top_container"> 
      <a class="thumbnailtop" href="home">
        <img id="backarrow" src="images/backarrow.png">
      </a>
      <header class="title">
        <text>Profile</text>
      </header>
      <div class="logoutbtn">
        <a href="/"  id="logout" type="button" onclick="FB.logout(function(response){});">LogOut</a>
      </div>
    </div>

    <div class="content_container">
      <div class="welcome">
        <div class="user">
          <!-- FB Login doesn't correctly parse information -->
          <div id="facebookPhoto" class="photo">
            <img id="photo" class='img-responsive' src="images/profileIcon.png"><br>
          </div>
          <text>Name:</text>
          <text id="name">{{user.name}}</text><br>
          <text>Email:</text>
          <text>{{user.email}}</text><br>
          <text>Password:</text>
          <text>******</text><br>
          <text>Dominant Hand:</text>
          <text>{{user.dominanthand}}</text><br>
          {{#if user.handicap}}
            <text>Average Handicap:</text>
            <text>{{user.handicap}}</text>
          {{else}}
            <text>Average Handicap:</text>
            <text>Not Available</text>
          {{/if}}
        </div>        
      </div>
      <form class="editBtn" method="get" action="editprofile">
          <button id="edit" type="submit">Edit</button> 
      </form> 
    </div>    
  </div>
</body>
</html>
