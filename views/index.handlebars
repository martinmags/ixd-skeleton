<!doctype html>
<html>

<head>
  <title>SwingGo - Learn from a Virtual Coach</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- JQUERY -->
  <script src="https://code.jquery.com/jquery.js"></script>
  <!-- Bootstrap -->
  <script src="js/bootstrap/bootstrap.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
  <link rel="stylesheet" href="css/bootstrap-theme.min.css">
  <link rel="stylesheet" href="css/bootstrap.min.css">
  <!-- Styling -->  
  <link rel="stylesheet" href="css/indexstyles.css">
  <!-- FB Login Api -->
  {{> facebook}}
  <script src="/js/facebook.js"></script>
</head>

<body>
  <div class="modal-dialog text-center">
    <div class="col-sm-8 main-section">
      <div class="modal-content" id="appuse">
        <img id="logo" src="/images/logo.png"/>
        A virtual golf coach with instant feedback and corrections.
      </div>
      <!-- Fix the login doesn't register information -->
      <div class="modal-content">
        <form class="col-12" action="/home">
          <div class="form-group" id="email">
            <input type="email" class="form-control" placeholder="Email" name="email">
          </div>
          <div class="form-group password" id="pw">
            <input type="password" class="form-control" placeholder="Password" name="password">
          </div>
          <button type="submit" class="btn">
            <i class="fas fa-sign-in-alt"></i>
            Login
          </button>
          <p class="fblogin">
            Please login through Facebook
            <fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
          </fb:login-button>
          </p>
        </form>

        <a class="col-12" href="createacc" id="new">New User?</a>
      </div>
    </div>
  </div>
</body>
</html>
